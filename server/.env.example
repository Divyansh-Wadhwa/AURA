# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Atlas Connection
# Get your connection string from MongoDB Atlas dashboard
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/aura?retryWrites=true&w=majority

# JWT Secret (generate a random string)
JWT_SECRET=your_jwt_secret_key_here_min_32_chars

# OpenRouter API Key (for AI Interviewer and Perception)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter Model Configuration
# IMPORTANT: When using OpenAI SDK (not OpenRouter SDK), only certain models work
# OpenAI-compatible endpoint models: google/gemini-2.5-pro
# Other models require @openrouter/sdk instead of openai package
OPENROUTER_INTERVIEW_MODEL=google/gemini-2.5-pro
OPENROUTER_FEEDBACK_MODEL=google/gemini-2.5-pro

# Groq API Key (for AI Interviewer)
# Get your free API key from: https://console.groq.com/keys
GROQ_API_KEY=your-groq-api-key-here

# ML Service URL (for later integration)
ML_SERVICE_URL=http://localhost:8000

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:5173
